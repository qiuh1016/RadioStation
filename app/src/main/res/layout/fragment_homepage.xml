<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homepage_background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.cetcme.radiostation.Fragment.HomepageFragment">

    <com.qiuhong.qhlibrary.QHTitleView.QHTitleView
        android:id="@+id/qhTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/ch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/mmsi_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="end"
            android:paddingRight="20dp"
            android:text="MMSI    123456789"
            android:textColor="@color/homepage_text_color"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="CH   "
                android:textAlignment="center"
                android:textColor="@color/homepage_text_color"
                android:textSize="60sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ch_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="0200"
                android:textAlignment="center"
                android:textColor="@color/homepage_text_color"
                android:textSize="60sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TX     "
                android:textAlignment="center"
                android:textColor="@color/homepage_text_color"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tx_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2182.00"
                android:textAlignment="center"
                android:textColor="@color/homepage_text_color"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="kHz"
                android:textColor="@color/homepage_text_color"
                android:textSize="17sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RX     "
                android:textAlignment="center"
                android:textColor="@color/homepage_text_color"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/rx_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2182.00"
                android:textAlignment="center"
                android:textColor="@color/homepage_text_color"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="kHz"
                android:textColor="@color/homepage_text_color"
                android:textSize="17sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/circle_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/homepage_circle_button"/>

        <TextView
            android:id="@+id/progress_tv"
            android:layout_width="46dp"
            android:layout_height="17dp"
            android:background="@drawable/homepage_three_circle"/>

    </LinearLayout>

    <include layout="@layout/separate_line"/>

    <LinearLayout
        android:id="@+id/ssb_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ssb_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SSB"
                android:textAlignment="center"
                android:textColor="@color/homepage_text_color"
                android:textSize="50sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/agc_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="AGC"
                    android:textAlignment="textEnd"
                    android:textColor="@color/homepage_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/agc_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/agcString"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/agc_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="FAST"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="15dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/down26"
                    android:visibility="gone"/>

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/sql_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="SQL"
                    android:textAlignment="textEnd"
                    android:textColor="@color/homepage_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/sql_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/sqlString"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/sql_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="20"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/att_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="ATT"
                    android:textAlignment="textEnd"
                    android:textColor="@color/homepage_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/att_spinner"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/attString"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/att_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/homepage_att_0"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:visibility="visible"/>

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/pow_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="POW"
                    android:textAlignment="textEnd"
                    android:textColor="@color/homepage_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/pow_spinner"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/powString"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/pow_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/homepage_pow_0"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/separate_line"/>

    <LinearLayout
        android:id="@+id/changjing_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/conversation_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="4"
            android:textAlignment="center"
            android:textColor="@color/homepage_text_color"
            android:textSize="45sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/conversation_icon_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/homepage_duochangjing"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/n_tv"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="34°42.2800N"
                    android:textAlignment="textEnd"
                    android:textColor="@color/homepage_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/utc_tv"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:text="UTC 11:40"
                    android:textColor="@color/homepage_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/w_tv"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="135°19.5900W"
                    android:textAlignment="textEnd"
                    android:textColor="@color/homepage_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:text="GPS"
                    android:textColor="@color/homepage_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/separate_line"/>

    <LinearLayout
        android:id="@+id/voice_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/voiceTextView"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:background="@drawable/homepage_voice_button"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>

